{
  "name": "english-essence-chrome-extension",
  "version": "1.0",
  "description": "Add-on for adding words to english-essence app",
  "icons": {
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "background": {
    "scripts": ["contextMenu.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "contextMenus", "notifications", "http://172.20.1.1/*", "http://english-essence.herokuapp.com*"],
  "manifest_version": 2
}